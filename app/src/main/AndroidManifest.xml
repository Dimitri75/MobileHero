<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kei.mobilehero" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.game.GamesActivity"
            android:label="@string/title_activity_games" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.game.NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.round.RoundsActivity"
            android:label="@string/title_activity_rounds" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.round.NewRoundActivity"
            android:label="@string/title_activity_new_round" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.character.CharactersActivity"
            android:label="@string/title_activity_characters" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.character.NewCharacterActivity"
            android:label="@string/title_activity_new_character" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.dice.DicesActivity"
            android:label="@string/title_activity_dices" >
        </activity>
    </application>
</manifest>
