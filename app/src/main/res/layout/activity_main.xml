<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.MainActivity"
    android:background="@drawable/paladin"
    android:onClick="buttonOnClick"
    android:id="@+id/main_activity">


    <kei.mobilehero.custom.widgets.MyCustomTextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#ffffffff"
        android:textStyle="bold" android:textSize="75sp" android:gravity="center"
        android:text="@string/app_name"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/click"
        android:id="@+id/textView_main"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:autoText="true"
        android:textColor="#bb000000" />

</RelativeLayout>
