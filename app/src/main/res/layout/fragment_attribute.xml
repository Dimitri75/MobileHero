<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.character.fragments.AttributeFragment"
    android:background="#a2000000">

    <kei.mobilehero.custom.widgets.MyCustomEditText
        android:layout_marginTop="20dp"
        android:layout_width="85dp"
        android:layout_height="95dp"
        android:background="@drawable/level"
        android:maxLength="4"
        android:hint="Niveau"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_characterLevel_new_character"
        android:imeOptions="actionNext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_marginTop="45dp"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_characterName_new_character"
        android:hint="Nom"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_below="@+id/editText_characterLevel_new_character"
        android:layout_alignLeft="@+id/editText_characterGender_new_character"
        android:layout_alignStart="@+id/editText_characterGender_new_character"
        android:imeOptions="actionNext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginTop="55dp"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_characterGender_new_character"
        android:hint="Sexe"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_below="@+id/editText_characterName_new_character"
        android:imeOptions="actionNext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_marginTop="55dp"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_characterRace_new_character"
        android:hint="Race"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_below="@+id/editText_characterGender_new_character"
        android:layout_alignLeft="@+id/editText_characterGender_new_character"
        android:layout_alignStart="@+id/editText_characterGender_new_character"
        android:layout_alignRight="@+id/editText_characterGender_new_character"
        android:layout_alignEnd="@+id/editText_characterGender_new_character"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_marginTop="55dp"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_characterClassName_new_character"
        android:hint="Classe"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_below="@+id/editText_characterRace_new_character"
        android:layout_alignLeft="@+id/editText_characterGender_new_character"
        android:layout_alignStart="@+id/editText_characterGender_new_character"
        android:layout_alignRight="@+id/editText_characterGender_new_character"
        android:layout_alignEnd="@+id/editText_characterGender_new_character"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_marginTop="55dp"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_characterAlignment_new_character"
        android:hint="Alignement"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_below="@+id/editText_characterClassName_new_character"
        android:layout_alignRight="@+id/editText_characterClassName_new_character"
        android:layout_alignEnd="@+id/editText_characterClassName_new_character"
        android:layout_alignLeft="@+id/editText_characterClassName_new_character"
        android:layout_alignStart="@+id/editText_characterClassName_new_character"
        android:imeOptions="actionDone"/>
</RelativeLayout>
