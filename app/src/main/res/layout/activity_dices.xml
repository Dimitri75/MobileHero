<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.DicesActivity"
    android:background="@drawable/mobile">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_dices_nbDices"
        android:hint="Nombre de dÃ©s"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:width="150dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_dices_nbSides"
        android:hint="Nombre de faces"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:width="150dp"
        android:layout_alignTop="@+id/editText_dices_nbDices"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <Button
        android:background="@drawable/roll_button"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:text="Roll"
        android:textSize="20dp"
        android:id="@+id/button_roll_dices"
        android:layout_below="@+id/editText_dices_nbDices"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="buttonOnClick"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_dices"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_below="@+id/button_roll_dices"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />-->

</RelativeLayout>
