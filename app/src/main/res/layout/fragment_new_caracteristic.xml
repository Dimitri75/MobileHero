<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.character.fragments.NewCaracteristicFragment">

    <EditText
        android:maxLength="50"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_caracteristicName_new_caracteristic"
        android:hint="@string/caracteristicName"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginTop="45dp"
        android:maxLength="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_caracteristicValue_new_caracteristic"
        android:hint="@string/caracteristicValue"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:width="150dp"
        android:layout_below="@+id/editText_caracteristicName_new_caracteristic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignRight="@+id/editText_caracteristicName_new_caracteristic"
        android:layout_alignEnd="@+id/editText_caracteristicName_new_caracteristic" />

    <kei.mobilehero.custom.widgets.MyCustomButton
        android:layout_marginTop="60dp"
        android:background="@drawable/button_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/button_saveCaracteristic_new_caracteristic"
        android:onClick="buttonOnClick"
        android:textColor="#e1000000"
        android:textSize="16sp"
        android:layout_below="@+id/editText_caracteristicValue_new_caracteristic"
        android:layout_alignLeft="@+id/editText_caracteristicValue_new_caracteristic"
        android:layout_alignStart="@+id/editText_caracteristicValue_new_caracteristic"
        android:layout_alignRight="@+id/editText_caracteristicValue_new_caracteristic"
        android:layout_alignEnd="@+id/editText_caracteristicValue_new_caracteristic" />

</RelativeLayout>
