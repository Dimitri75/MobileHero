<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.game.NewGameActivity"
    android:background="@drawable/mobile">

    <kei.mobilehero.custom.widgets.MyCustomTextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_appName_new_game"
        android:textSize="@dimen/app_name_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_gameName_new_game"
        android:hint="Entrez le nom du jeu"
        android:textColor="#ffffffff"
        android:textColorHint="#FF9B9B9B"
        android:gravity="center_horizontal"
        android:layout_above="@+id/button_saveGame_new_game"
        android:layout_marginBottom="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <kei.mobilehero.custom.widgets.MyCustomButton
        android:background="@xml/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sauvegarder"
        android:id="@+id/button_saveGame_new_game"
        android:onClick="buttonOnClick"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/label_appName_new_game"
        android:layout_alignEnd="@+id/label_appName_new_game"
        android:layout_alignLeft="@+id/label_appName_new_game"
        android:layout_alignStart="@+id/label_appName_new_game"
        android:textColor="#b9ffe0b0"
        android:textSize="16sp"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10" />

</RelativeLayout>
