<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kei.mobilehero.activities.character.AttributesActivity"
    android:id="@+id/layout_attribute_activity">

    <kei.mobilehero.custom.widgets.MyCustomTextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_appName_attribute"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/app_name_size"
        android:textColor="#ffffffff" />

    <!-- ATTRIBUTES -->
    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.CaracteristicFragment"
        android:id="@+id/fragment_caracteristic_attribute"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.SkillFragment"
        android:id="@+id/fragment_skill_attribute"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.EquipmentFragment"
        android:id="@+id/fragment_equipment_attribute"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_centerHorizontal="true" />

    <!-- NEW ATTRIBUTES -->
    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.CaracteristicFormFragment"
        android:id="@+id/fragment_new_caracteristic_attribute"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.SkillFormFragment"
        android:id="@+id/fragment_new_skill_attribute"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="kei.mobilehero.fragments.EquipmentFormFragment"
        android:id="@+id/fragment_new_equipment_attribute"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label_appName_attribute"
        android:layout_alignParentBottom="true" />

</RelativeLayout>