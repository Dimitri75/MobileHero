<?xml version="1.0" encoding="utf-8"?>
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- view background color -->
        <solid
            android:color="#BF3737">
        </solid>

        <!-- view border color and width -->
        <stroke
            android:width="3dp"
            android:color="#A11717" >
        </stroke>

        <corners
            android:radius="1dp" >
        </corners>

    <gradient
        android:angle="90"
        android:centerX="0%"
        android:centerColor="#BF3737"
        android:startColor="#FFFFFF"
        android:endColor="#A11717"
        android:type="linear"/>

</shape>